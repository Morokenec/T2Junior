<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.AuthorizationPage"
             BackgroundColor="#F2F2F7"
             >

    <StackLayout Padding="20" Spacing="10">
        <Frame CornerRadius="20" BorderColor="Transparent" HasShadow="True" Padding="0" BackgroundColor="Transparent" HorizontalOptions="Center">
            <Image Source="logo.svg" WidthRequest="130" HeightRequest="130" Aspect="AspectFit" />
        </Frame>

        <Label Text="Вход в приложение" 
               FontSize="20"
               FontFamily="MyriadPro"
               HorizontalOptions="Center" 
               VerticalOptions="Center" 
               Margin="0,10,0,10" />

        <Frame CornerRadius="20" BorderColor="Transparent" HasShadow="True" Padding="0">
            <Entry x:Name="EmailEntry" WidthRequest="300" HeightRequest="50" 
               Placeholder="E-mail" 
               HorizontalOptions="Center"  />
        </Frame>


            <Frame CornerRadius="20" BorderColor="Transparent" HasShadow="True" Padding="10">
                <Entry x:Name="PswdEntry" 
               WidthRequest="300" 
               HeightRequest="37"
               IsPassword="True"
               Placeholder="Пароль" 
               HorizontalOptions="Center"/>
            </Frame>

             <ImageButton x:Name="TogglePasswordVisibilityButton"
             Source="eye_closed.svg"
             WidthRequest="40"
             HeightRequest="40"
             Clicked="OnPasswordVisibilityClicked"/>

                <Label Text="Забыли пароль?"
               HorizontalOptions="End"
               TextColor="#4986BE">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
            </Label.GestureRecognizers> 
        </Label>

        <Label x:Name="ValidationLabel" 
               TextColor="Red"
               FontFamily="MyriadPro"
               IsVisible="False"
               HorizontalOptions="Center"
               VerticalOptions="Center" 
               Margin="0,10,0,10"/>

        <Frame CornerRadius="20" BorderColor="Transparent" HasShadow="True" Padding="0">
            <Button Text="Войти"
                BackgroundColor="#0057A6"
                TextColor="White"
                    Clicked="OnEnterClicked"/>
        </Frame>

        <Frame CornerRadius="20" BorderColor="#91B4D7" HasShadow="True" Padding="0">
            <Button Text="Регистрация"
        BackgroundColor="Transparent"
        TextColor="#0057A6"/>
        </Frame>


    </StackLayout>

</ContentPage>
