<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="T2JuniorMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:T2JuniorMobile"
    Shell.FlyoutBehavior="Disabled"
    Title="T2JuniorMobile">

    <TabBar>
        <Tab Title="Новости" Icon="newspaper.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Сообщения" Icon="message_square.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Клубы" Icon="users.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Настройки" Icon="settings.svg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </TabBar>

</Shell>
