<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T2JuniorMobile.View.Pages.AuthPage"
             xmlns:components="clr-namespace:T2JuniorMobile.View.Components"
             xmlns:local="clr-namespace:T2JuniorMobile.View.Pages">

    <ScrollView>
        <VerticalStackLayout
         Padding="15,0"
         Spacing="25">
            <Image
             Source="logo.png"
             HeightRequest="250"
             Aspect="AspectFit"
             />
            <Label 
                Text="Вход в приложение"
                HorizontalTextAlignment="Center"
                TextColor="#0057a6"
                FontSize="20"
                />
            <VerticalStackLayout
                Spacing="15">
                <components:RegisterEntry Placeholder="Email"
                                  Text="{Binding Email}"/>
                <components:RegisterEntry Placeholder="Пароль"
                               Text="{Binding Password}"
                                />
                <Label Text="Забыли пароль?"
               HorizontalOptions="End"
               TextColor="#4986BE">
                </Label>
            </VerticalStackLayout>

            <VerticalStackLayout
                Spacing="15">

                <components:RegisterButton
                ButtonBackgroundColor="#0057a6"
                TextColor="White"
                CornerRadius="10"
                Height="10"
                Text="Войти"
                Command="{Binding LoginCommand}"
                />

                <components:RegisterButton
                TextColor="#0057a6"  
                ButtonBackgroundColor="White"
                CornerRadius="10"
                Height="10"
                Text="Регистрация"
                Command="{Binding NavigateRegisterCommand}"
                />

            </VerticalStackLayout>



        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
