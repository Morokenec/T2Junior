<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T2JuniorMobile.View.Pages.ProfilePage"
             xmlns:components="clr-namespace:T2JuniorMobile.View.Components"
             Title="Профиль">

    <VerticalStackLayout Spacing="16">

        <Frame HeightRequest="288"
               WidthRequest="375"
               BackgroundColor="White"
               HasShadow="False"
               Padding="0,0,0,0">

            <StackLayout>
                <HorizontalStackLayout Spacing="187">

                    <Frame BackgroundColor="#F4FAFF"
                           HorizontalOptions="Start"
                           WidthRequest="78"
                           HeightRequest="44"
                           CornerRadius="10"
                           Padding="8,0,8,0"
                           Margin="16,19,0,0"
                           HasShadow="True">

                        <StackLayout HorizontalOptions="Center"
                                     VerticalOptions="Start"
                                     Spacing="-10">
                            <HorizontalStackLayout Spacing="4" 
                                                   Margin="8, 4, 4, 8"
                                                   HorizontalOptions="Center"
                                                   WidthRequest="62" 
                                                   HeightRequest="14">
                                <Image Source="coin_holder.png"
                                       Aspect="AspectFill"
                                       WidthRequest="14"
                                       HeightRequest="14"/>
                                <Label Text="Коины" 
                                       TextColor="#498CC4"
                                       FontSize="12"
                                       WidthRequest="40"
                                       HeightRequest="14"/>
                            </HorizontalStackLayout>
                            <Label x:Name="CoinCountLabel"
                                   FontSize="20"
                                   Text="0"
                                   WidthRequest="12"
                                   HeightRequest="23"
                                   HorizontalOptions="Center"
                                   FontFamily="MyriadProBold"/>
                        </StackLayout>
                    </Frame>

                    <Frame BackgroundColor="#F4FAFF"
                           HorizontalOptions="Center"
                           VerticalOptions="Start"
                           WidthRequest="78"
                           HeightRequest="44"
                           CornerRadius="10"
                           Padding="6,0,6,0"
                           Margin="0,19,16,0"
                           HasShadow="True">

                        <StackLayout HorizontalOptions="Center"
                                     VerticalOptions="Center" Spacing="5">
                            <HorizontalStackLayout Spacing="4">
                                <Image Source="rating_holder.png"
                                   Aspect="AspectFill"
                                   WidthRequest="14"
                                   HeightRequest="14"/>
                                <Label Text="Рейтинг" 
                                       TextColor="#498CC4"
                                       FontSize="12"
                                       WidthRequest="48"
                                       HeightRequest="14"/>
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="1" 
                                                   HorizontalOptions="Center"
                                                   WidthRequest="36"
                                                   HeightRequest="13">

                                <Label x:Name="UserRatingLabel"
                                       FontSize="20"
                                       HeightRequest="22"
                                       Text="0"
                                       VerticalOptions="End"
                                       FontFamily="MyriadProBold"/>

                                <Label FontSize="9"
                                       Text="из"
                                       VerticalOptions="End"
                                       TextColor="#9C9B9A"/>

                                <Label x:Name="RatingCountLabel"
                                       FontSize="9"
                                       Text="0"
                                       VerticalOptions="End"
                                       TextColor="#9C9B9A"/>

                            </HorizontalStackLayout>
                        </StackLayout>
                    </Frame>
                </HorizontalStackLayout>

                <Grid WidthRequest="343" Padding="16,7,16,18">
                    <Image x:Name="AvatarImage"
                   Source="profile_placeholder.png"
                   Aspect="AspectFill"
                   WidthRequest="100"
                   HeightRequest="100"
                           VerticalOptions="Start"/>
                    <Frame
                        x:Name="CircleOverlay"
                        BackgroundColor="#3DC47C"
                        WidthRequest="20"
                        HeightRequest="19"
                        CornerRadius="25"
                        Margin="97,81,31,1">
                    </Frame>
                </Grid>
                <VerticalStackLayout Spacing="6">
                    <Label 
                   x:Name="FullNameLabel"
                   Text="ФИО" 
                   HorizontalOptions="Center"
                   FontSize="20"/>

                    <Label 
                    x:Name="RoleLabel"
                    Text="Роль участника" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="15"/>

                    <Label 
                    x:Name="JobLabel"
                    TextColor="#838281"
                    Text="Организация" 
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    FontSize="12"/>
                </VerticalStackLayout>
            </StackLayout>
        </Frame>
        <HorizontalStackLayout Spacing="10" 
                               Margin="32,0,0,0"
                               WidthRequest="375" 
                               HeightRequest="76">
            <Frame CornerRadius="16"
                   HasShadow="True" 
                   HeightRequest="76"
                   Padding="12,12,12,12"
                   WidthRequest="107.76">

                <StackLayout Spacing="6">
                    <Label Text="Подписчики" 
                           FontSize="13" 
                           FontFamily="ManropeMid" 
                           TextColor="#9C9B9A"
                           WidthRequest="84"
                           HeightRequest="20"
                           HorizontalOptions="Start"/>

                    <Label x:Name="SubscribersCount" Text="0" FontFamily="MyriadProBold" FontSize="20" TextColor="#838281"/>
                </StackLayout>
            </Frame>
            <Frame CornerRadius="16"
                   HasShadow="True" 
                   HeightRequest="76"
                   Padding="12,12,12,12"
                   WidthRequest="107.76">
    
                <StackLayout Spacing="6">
                    <Label Text="Подписки" FontSize="13" FontFamily="ManropeMid" TextColor="#9C9B9A"/>

                    <Label x:Name="FollowingCount" Text="0" FontFamily="MyriadProBold" FontSize="20" TextColor="#838281"/>
                </StackLayout>
            </Frame>
            <Frame CornerRadius="16" 
                   HasShadow="True"
                   HeightRequest="76"
                   Padding="12,12,12,12"
                   WidthRequest="107.76">

                <StackLayout Spacing="6">
                    <Label Text="Клубы" FontSize="13" FontFamily="ManropeMid" TextColor="#9C9B9A"/>

                    <Label x:Name="ClubsCount" Text="0" FontFamily="MyriadProBold" FontSize="20" TextColor="#838281"/>
                </StackLayout>
            </Frame>
        </HorizontalStackLayout>


        <Frame CornerRadius="20" 
               HeightRequest="160" 
               Margin="16,0,16,0" 
               WidthRequest="343" 
               Padding="20,8,20,8">
            <VerticalStackLayout>
                <Frame HasShadow="False" 
                       BorderColor="Transparent" 
                       HeightRequest="48" 
                       WidthRequest="303"
                       Padding="0,12,0,12">

                    <HorizontalStackLayout Spacing="12">
                        <Image Source="projects.png"
                               Aspect="AspectFill"
                               WidthRequest="24"
                               HeightRequest="24"/>
                        <Label Text="Проекты" 
                               TextColor="#191C30"
                               FontSize="15"
                               WidthRequest="231"
                               HeightRequest="20"/>
                        <Image Source="redirect.png"
                               Aspect="AspectFill"
                               WidthRequest="24"
                               HeightRequest="24"/>
                    </HorizontalStackLayout>
                </Frame>
                <BoxView HeightRequest="2" 
                  BackgroundColor="#E4E4E4" 
                  HorizontalOptions="FillAndExpand" 
                  VerticalOptions="End" />
                <Frame HasShadow="False" 
                       BorderColor="Transparent"
                       HeightRequest="48" 
                       WidthRequest="303"
                       Padding="0,12,0,12">

                    <HorizontalStackLayout Spacing="12">
                        <Image Source="activities.png"
                               Aspect="AspectFill"
                               WidthRequest="24"
                               HeightRequest="24"/>
                        <Label Text="Активности" 
                               TextColor="#191C30"
                               FontSize="15"
                               WidthRequest="231"
                               HeightRequest="20"/>
                        <Image Source="redirect.png"
                               Aspect="AspectFill"
                               WidthRequest="24"
                               HeightRequest="24"/>
                    </HorizontalStackLayout>
                </Frame>
                <BoxView HeightRequest="2" 
                         BackgroundColor="#E4E4E4" 
                         HorizontalOptions="FillAndExpand" 
                         VerticalOptions="End" />
                <Frame HasShadow="False" 
                       BorderColor="Transparent"
                       HeightRequest="48" 
                       WidthRequest="303"
                       Padding="0,12,0,12">

                    <HorizontalStackLayout Spacing="12">
                        <Image Source="profile_news.png"
                               Aspect="AspectFill"
                               WidthRequest="24"
                               HeightRequest="24"/>
                        <Label Text="Новости" 
                               TextColor="#191C30"
                               FontSize="15"
                               WidthRequest="231"
                               HeightRequest="20"/>
                        <Image Source="redirect.png"
                               Aspect="AspectFill"
                               WidthRequest="24"
                               HeightRequest="24"/>
                    </HorizontalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>


</ContentPage>