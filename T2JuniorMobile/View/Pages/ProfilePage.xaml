<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T2JuniorMobile.View.Pages.ProfilePage"
             xmlns:components="clr-namespace:T2JuniorMobile.View.Components"
             Title="Профиль">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <components:TopProfilleButton HorizontalOptions="Start" Margin="15, 20, 0, 15"/>
        <components:TopProfilleButton Grid.Column="2" HorizontalOptions="End" Margin="0, 20, 15, 15"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="2" Background="White">
            <Frame BorderColor="Transparent"
                   CornerRadius="50"
                   HorizontalOptions="Center"
                   Padding="0,0,0,0">
                <Image x:Name="AvatarImage"
                          Source="profile_placeholder.png"
                          Aspect="AspectFill"
                          HeightRequest="100"
                          WidthRequest="100"
                          VerticalOptions="Start"/>
            </Frame>
        </Grid>

        <VerticalStackLayout Grid.Row="2" 
                             Grid.ColumnSpan="2" 
                             HorizontalOptions="Fill"
                             Padding="15" 
                             Spacing="5"
                             Background="White">
            <Label 
               x:Name="FullNameLabel"
               Text="{Binding Name}" 
               HorizontalOptions="Center"
               FontSize="20"/>

            <Label 
            x:Name="RoleLabel"
            Text="Роль участника" 
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="15"/>

            <Label 
            x:Name="JobLabel"
            TextColor="#838281"
            Text="Организация" 
            HorizontalOptions="Center"
            VerticalOptions="Center"
            FontSize="12"/>

            <components:RegisterButton
                ButtonBackgroundColor="#0057a6"
                TextColor="White"
                CornerRadius="10"
                Text="Войти"
                />


        </VerticalStackLayout>

        <HorizontalStackLayout  Spacing="15" HorizontalOptions="Center" Grid.Row="3" Grid.ColumnSpan="2">
            <Frame
                    WidthRequest="115"
                    CornerRadius="16"
                    HasShadow="True">
                <VerticalStackLayout >
                    <Label Text="Подписчики" 
                            FontSize="13" 
                            FontFamily="ManropeMid" 
                            TextColor="#9C9B9A"
                            HorizontalOptions="Start"/>

                    <Label x:Name="SubscribersCount" 
                            Text="0" 
                            FontFamily="MyriadProBold" 
                            FontSize="20" 
                            TextColor="#838281"/>
                </VerticalStackLayout>
            </Frame>
            <Frame  WidthRequest="115"
                        CornerRadius="16"
                        HasShadow="True">
                <VerticalStackLayout>
                    <Label Text="Подписки" 
                                FontSize="13" 
                                FontFamily="ManropeMid" 
                                TextColor="#9C9B9A"/>

                    <Label x:Name="FollowingCount" 
                    Text="0" 
                    FontFamily="MyriadProBold" 
                    FontSize="20" 
                    TextColor="#838281"/>
                </VerticalStackLayout>
            </Frame>
            <Frame 
                WidthRequest="115"
                CornerRadius="16" 
                HasShadow="True">
                <StackLayout x:Name="ClubsLayout">
                    <Label Text="Клубы" FontSize="13" FontFamily="ManropeMid" TextColor="#9C9B9A"/>
                    <Label x:Name="ClubsCount" Text="0" FontFamily="MyriadProBold" FontSize="20" TextColor="#838281"/>
                </StackLayout>
            </Frame>
        </HorizontalStackLayout>
    </Grid>

</ContentPage>