<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T2JuniorMobile.View.Pages.ConfimPage"
             xmlns:components="clr-namespace:T2JuniorMobile.View.Components"
             Title="Регистрация в приложении">
    <ScrollView>
        <VerticalStackLayout
      Padding="15,50"
      Spacing="30">
            <VerticalStackLayout
             Spacing="15">
                <components:RegisterEntry Placeholder="Придумайте пароль"
                               Text="{Binding Email}"/>
                <components:RegisterEntry Placeholder="Введите пароль повторно"
                            Text="{Binding Password}"
                             />
            </VerticalStackLayout>

            <VerticalStackLayout
             Spacing="15">
                <components:RegisterButton        
                ButtonBackgroundColor="#0057a6"
                TextColor="White"
                CornerRadius="10"
                Text="Подтвердить"
                Command="{Binding NavigateConfimCommand}"
                />
                <components:RegisterButton
                 TextColor="#0057a6"  
                 ButtonBackgroundColor="White"
                 CornerRadius="10"
                 Text="Отмена"
                 Command="{Binding NavigateRegisterCommand}"
                 />

            </VerticalStackLayout>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>