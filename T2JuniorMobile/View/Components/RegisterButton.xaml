<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T2JuniorMobile.View.Components.RegisterButton"
             x:Name="RootView">

    <Frame x:Name="frame"
           CornerRadius="{Binding Source={x:Reference RootView}, Path=CornerRadius}"
           BorderColor="{Binding Source={x:Reference RootView}, Path=BorderColor}"
           Padding="0"
           BackgroundColor="{Binding Source={x:Reference RootView}, Path=ButtonBackgroundColor}">
        <Grid>
            <Button x:Name="button"
                    Text="{Binding Source={x:Reference RootView}, Path=Text}"
                    BackgroundColor="Transparent"
                    TextColor="{Binding Source={x:Reference RootView}, Path=TextColor}"
                    CornerRadius="{Binding Source={x:Reference RootView}, Path=CornerRadius}"
                    Command="{Binding Source={x:Reference RootView}, Path=Command}"
                    CommandParameter="{Binding Source={x:Reference RootView}, Path=CommandParameter}" />
        </Grid>
    </Frame>
</ContentView>
